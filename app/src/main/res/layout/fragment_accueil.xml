<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.philippine.mysterynumber.AccueilFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="179dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bienvenue sur le jeu concour d''Auchan"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:layout_marginBottom="80dp"/>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Le nombre mystère"
                            android:layout_gravity="center"
                            android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L’objectif est de trouver un nombre mystère en un nombre de coup limité (5).
Le nombre mystère est un nombre random qui se trouve entre 0 et 100.
A chaque partie, il est réinitialisé.
"
                            android:justificationMode="inter_word"
                            android:textColor="@color/colorPrimaryDark" />


                </LinearLayout>
        </RelativeLayout>

</FrameLayout>
